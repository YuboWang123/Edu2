
@model Edu.UI.Areas.School.Models.TrainLessonViewModels.TrainLessonViewModel

@{
    var title = Model.IsEdit ? "增加课程" : "编辑课程";
    var actName =Model.IsEdit ? "edit": "add" ;
}

<link href="~/Scripts/lib/fileUpload/fileinput.css" rel="stylesheet" />
<link href="~/Areas/School/Public/css/lesson/lessonEdit.css" rel="stylesheet" />
<script src="~/Areas/School/Public/js/lesson/fileUpload/fileinput.js"></script>
<script src="~/Areas/School/Public/js/lesson/fileUpload/fileinput1.js"></script>
<script src="~/Areas/School/Public/js/lesson/fileUpload/zh.js"></script>

<div class="row">
    <div class="panel panel-info">
        <div class="panel-heading page-header" style="border-bottom:1px solid #d4d4d4;">
            <div class="row">
                <div class="col-md-4">
                    <h4 class="title pull-left" property="@Model.TrainBaseLesson.Base_DataBindId">@title</h4>
                    <a class="btn btn-info btn-sm margin-left bck">
                        <i class="glyphicon glyphicon-menu-left"></i> 返回
                    </a>
                </div>
                <div class="col-md-8">
                    <h4 style="">@Model.LessonInfo</h4>
                </div>
            </div>
         
        </div>


        <div class="panel-body" >
          
            <div class="col-md-8 col-md-offset-2">
                @using (Ajax.BeginForm(actName, "trainlesson", new AjaxOptions { HttpMethod = "post", OnBegin = "", OnComplete = "saveCb" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.Partial("editLesson",Model.TrainBaseLesson)
                }
            </div>

        </div>
    </div>
</div>

<script src="~/Areas/School/Public/js/lesson/edit.js"></script>

