@using Edu.Entity.TrainBase
@model IEnumerable<Base_Period>

<link href="~/Areas/School/Public/css/lesson/lesson.css" rel="stylesheet" />
 
<div class="page-header">
    <div class="pull-left">
        <h4>  <i class="glyphicon glyphicon-list"></i> <span class="title"></span></h4>
    </div>
</div>

<div class="manage-record" style="border-bottom:1px dashed #b9b9b9">

    <div class="info-center-title">
        <span class="padding-large-right pull-left">已关联的数据</span>
    </div>
    <div class="clearfix"></div>

    <div id="bindings">
        <section>
            <div class="hd">学段</div>
            <div class="bd xd" name="xd">
                <ul>
                    @{
                        if (Model != null && Model.Count() > 0)
                        {
                            foreach (var item in Model)
                            {
                                <li><a href="javascript:;" rel="xd_@item.Id">@item.TitleOrName</a></li>
                            }
                        }
                    }

                </ul>
            </div>
            <div class="clearfix"></div>
        </section>
        <section>
            <div class="hd">年级</div>
            <div class="bd nj" name="nj">
                <ul></ul>
            </div>
            <div class="clearfix"></div>
        </section>
        <section>
            <div class="hd">学科</div>
            <div class="bd xk" name="xk">
                <ul></ul>
            </div>
            <div class="clearfix"></div>
        </section>
        <section>
            <div class="hd">类别</div>
            <div class="bd lb" name="lb">
                <ul></ul>
            </div>
            <div class="clearfix"></div>
        </section>
    </div>
</div>


<div class="manage-record">
    <div class="info-center-title">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-6"> <span class="padding-large-right pull-left" style="padding-top:10px;">相关课程列表</span></div>
            <div class="col-xs-12 col-sm-6 col-md-6 text-right">
             
                <div class="layui-btn-group lessonBtns">
                    <button class="layui-btn layui-btn-danger" property="/trainlesson/add">多个删除</button>
                    <button class="layui-btn">增加</button>
                </div>
            </div>
        </div>
    </div>

    <div id="lsnTbl">
        <!--lesson table with pg here.-->
    </div>



</div>
<div class="clearfix"></div>
<script src="~/Scripts/binding.js"></script>
<script src="~/Areas/School/Public/js/trainBase/lesson.js"></script>
