

@using Edu.Entity.TrainBase
@model  Edu.UI.Areas.School.Models.BaseDataViewModel

@Html.Partial("headTitle")
@Html.Partial("_pagelist")

<!--modals-->
<!--add-->
<div class="modal fade" id="gradeAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    @using (Ajax.BeginForm("gradeAdd", "TrainBase", FormMethod.Post, new AjaxOptions { OnSuccess = "app.ds.ajaxSuccess()" }))
    {
        <div class="modal-dialog">

            <fieldset class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">X</span></button>
                    <h4 class="modal-title" id="myModalLabel">新增年级</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.Partial("_trainEdit", new Base_Grade())
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <input type="submit" class="btn btn-primary" value="确定">
                </div>
            </fieldset>
        </div>
    }
</div>

<!--edit-->
<div class="modal fade" id="gradeEdit" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    @using (Ajax.BeginForm("gradeEdit", "TrainBase", new { area = "school" }, new AjaxOptions { OnSuccess = "app.ds.ajaxSuccess()", HttpMethod = "post" }))
