


@model  Edu.Entity.DbBase

@Html.HiddenFor(model=>model.MakeDay)

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.Id)


    <div class="form-group">
        <label class="control-label col-md-2">名称</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.TitleOrName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.TitleOrName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">序号</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.OrderCode, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.OrderCode, "", new { @class = "text-danger" })
        </div>
    </div>


    <div class="form-group">
        <label class="control-label col-md-2">备注</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.Memo, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Memo, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group" style="padding-left:20px;margin-top:15px;">        
            <label class="control-label">显示</label>
            @Html.RadioButtonFor(model => model.IsEnabled, true, new { @name = "IsEnable", @checked = "true",style="margin-right:15px;" })

     
            <label class="control-label">不显示</label>
            @Html.RadioButtonFor(model => model.IsEnabled, false, new { @name = "IsEnable" }) 
        

    </div>
</div>






