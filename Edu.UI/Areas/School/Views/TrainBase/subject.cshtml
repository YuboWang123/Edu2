

@using Edu.Entity.TrainBase
@model  Edu.UI.Areas.School.Models.BaseDataViewModel

@Html.Partial("headTitle")
@Html.Partial("_pagelist")


<!--model-->
<div class="modal fade" id="subjectAdd" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">

    @using (Ajax.BeginForm("subjectAdd", "trainbase", new AjaxOptions { HttpMethod = "POST", OnSuccess = "app.ds.ajaxSuccess()" }))
    {
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">
                        <span aria-hidden="true">&times;</span>
                        <span class="sr-only">X</span>
                    </button>
                    <h4 class="modal-title" id="myModalLabel">增加学科</h4>
                </div>
                <div class="modal-body">
                    @Html.AntiForgeryToken()
                    @Html.Partial("_trainEdit", new Base_Subject())
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                    <input type="submit" class="btn btn-primary" value="确定">
                </div>
            </div>
        </div>
    }
</div>


<!--edit-->
