@using Edu.UI.Areas.School.Service
@model Edu.UI.Areas.School.Models.NewUserViewModel

@{
    var list = new RoleSv().GetRoleListItem();
}
<div class="form-horizontal">
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          
            @Html.TextBoxFor(m => m.UserName, new {@class = "form-control", name = "Name", autocomplete = "off" })
            @Html.ValidationMessageFor(m => m.UserName, "", new {@class = "text-danger"})
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.Role, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @Html.DropDownListFor(a=>a.Role,list,"--请选择--",new{ @class="form-control"})
        </div>
    </div>
</div>
