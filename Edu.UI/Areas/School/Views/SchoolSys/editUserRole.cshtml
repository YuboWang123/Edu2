
@model Edu.UI.Areas.School.Models.ChangeUserRoleViewModel


<div class="form-horizontal ">
    <div class="form-group">
        <label class="col-md-2 control-label">用户</label>
        <div class="col-md-10">
            <label class="control-label">  @Html.DisplayTextFor(a => a.UserName)</label>
            @Html.HiddenFor(a => a.Uid)
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">已有权限</label>
        <div class="col-md-10">
            <label class="control-label">  @Html.DisplayTextFor(a => a.RoleList)</label>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-2 control-label">更改为</label>
        <div class="col-md-10">
            @Html.DropDownList("SelectedRole", Model.SelectListRoles, "--请选择--", new { @class = "form-control" })
        </div>
    </div>



    <div class="form-group">
        <label class="col-md-2 control-label">是否为增加角色</label>
        <div class="col-md-10">
            @Html.CheckBoxFor(a=>a.IsAdd)
        </div>
    </div>
</div>