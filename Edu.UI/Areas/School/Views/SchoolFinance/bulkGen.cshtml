
@model Edu.BLL.SchoolFinance.CardGenParams
<style>
    .control-label{
        font-size: smaller;
    }
    .waiting {
        width: 90px;
        display: none;
        height: 30px;
        vertical-align: text-bottom;
        background-size: contain;
    }
</style>

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
                <span aria-hidden="true">&times;</span>
                <span class="sr-only">X</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">生成卡列表</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="form-horizontal">
                    @Html.HiddenFor(m => m.configId)
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        <label class="control-label col-md-3">卡号前缀</label>
                        <div class="col-md-3">
                            <label for="cardprefix" class="control-label cardprefix"></label>
                        </div>

                        <label class="control-label col-md-3">卡号长度(5-15位)</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.cardNoLen, new { htmlAttributes = new { @class = "form-control", min = "5", max = "15" } })
                            @Html.ValidationMessageFor(model => model.cardNoLen, "", new { @class = "text-danger" })
                        </div>

                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3">密码长度(6-10位)</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.pswLen, new { htmlAttributes = new { @class = "form-control" , min = "6" ,max = "10" } })
                            @Html.ValidationMessageFor(model => model.pswLen, "", new { @class = "text-danger" })
                        </div>
                        <label class="control-label col-md-3">生成数量</label>
                        <div class="col-md-3">
                            @Html.EditorFor(model => model.count, new { htmlAttributes = new { @class = "form-control",min=1 } })
                            @Html.ValidationMessageFor(model => model.count, "", new { @class = "text-danger" })
                        </div>
                    </div>

                </div>

            </div>

        </div>
        <div class="modal-footer">
            <div class="pull-left waiting" id="step" style=""></div>
            <div class="pull-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <input type="submit" class="btn btn-primary" value="生成">
            </div>
        </div>
    </div>
</div>