 
 

    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle mystyle-color" data-toggle="dropdown" aria-expanded="false">城市列表<span class="caret"></span></button>
        <!----下拉框选项---->
        <div class="dropdown-menu topbar-nav-list citys">
            @{
                if (ViewData["cities"] == null)
                {
                    return;
                }

                var prns =(ViewData["cities"] as SelectList);
                var crc = prns.Count(); int s = 0;


                for (int i = 0; i < crc / 6; i++)
                {
                    <div class="topbar-nav-col">
                        <ul>
                            @{

                                for (s = i * 6; s < (i + 1) * 6; s++)
                                {
                                    <li>
                                        <a href="#" property="@prns.ElementAt(s).Value">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                            <span class="">@prns.ElementAt(s).Text</span>
                                        </a>
                                    </li>
                                }


                            }
                        </ul>
                    </div>
                }

                if (s < crc)
                {
                    <div class="topbar-nav-col">

                        <ul>
                            @{
                                for (; s < crc; s++)
                                {
                                    <li>
                                        <a href="#" property="@prns.ElementAt(s).Value">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                            <span class="">@prns.ElementAt(s).Text</span>
                                        </a>
                                    </li>
                                }
                            }
                        </ul>

                    </div>


                }

            }







        </div>
    </div>


