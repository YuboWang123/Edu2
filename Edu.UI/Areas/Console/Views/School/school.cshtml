
@using Edu.Entity
@model School

@Html.ValidationSummary(true, "", new { @class = "text-danger" })

@Html.Partial("provinceSelect", null)

<input type="text" value="" class="form-control" name="provincename" />


<div id="cityList">
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle mystyle-color" data-toggle="dropdown" aria-expanded="false">城市列表<span class="caret"></span></button>
    </div>
</div>
<input type="text" class="form-control" name="cityname" />
@Html.HiddenFor(model => model.cityId)

<div id="cityCnyList">
    <div class="dropdown">
        <button class="btn btn-default dropdown-toggle mystyle-color" data-toggle="dropdown" aria-expanded="false">县级列表<span class="caret"></span></button>
    </div>
</div>
<input type="text" value="" class="form-control" name="citycntry" />
@Html.HiddenFor(model => model.countryId)

@Html.Partial("schoolTypeSelect", null)

<input type="text" value="" class="form-control" />
@Html.HiddenFor(model => model.sctype)
<label class="control-label">校长电话:</label>
@Html.EditorFor(model => model.SchoolmasterPhone, new { htmlAttributes = new { @class = "form-control" } })
<label class="control-label">学校备注:</label>
@Html.EditorFor(model => model.Memo, new { htmlAttributes = new { @class = "form-control" } })