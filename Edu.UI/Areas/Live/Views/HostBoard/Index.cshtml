@using Edu.Entity.Live

@model LiveHostShow

@{
    ViewBag.Title = "Index";
}

@section style
{
    <link href="~/Areas/Live/Public/js/layui/css/layui.css" rel="stylesheet" />
    <link href="~/Areas/Live/Public/css/liveSite.css" rel="stylesheet" />
}

<section>
    <div class="row mar-top40">
        <h2>setup</h2>
        <div class="col-md-8">
            @using (Ajax.BeginForm("UpdateOrAdd", new { area = "Live" }, new AjaxOptions() { HttpMethod = "POST", OnSuccess = "callback" }))
            {
                <div class="form-group">
                    @Html.LabelFor(m => m.TitleOrName, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.TitleOrName, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.TitleOrName, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-4">
                        @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.StartDate, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-md-6">
                        @Html.TextBoxFor(m => m.TimeDuration, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.TimeDuration, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Memo, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextAreaFor(m => m.Memo, new { @class = "form-control", autocomplete = "off" })
                        @Html.ValidationMessageFor(m => m.Memo, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-md-2 control-label">是否基础学科</label>
                    <div class="col-md-10 checkbox" style="padding-left: 2.5em">
                        @if (Model.IsBasic.HasValue)
                        {
                            Html.CheckBoxFor(a => a.IsBasic.Value);
                        }
                        else
                        {
                            <input type="checkbox" class="checkbox" name="IsBasic" />
                        }
                    </div>
                </div>
                <div class="form-group pull-right">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-warning" value="OK" />
                    </div>
                </div>
            }
        </div>
        <div class="col-md-4" style="width:32%;margin-left: 1%;">
            <h5>Android视频视频采集,请点击下方</h5>
            <a class="btn btn-success mar-top20 btn-md" >下载</a>
            <aside style="margin-top: 10px;">提示:本软件仅用于发送视频</aside>
        </div>
    </div>
</section>





@section scripts
{
    <script src="~/Areas/Live/Public/js/layui/layui.js"></script>
    <script type="text/javascript" src="~/Areas/Live/Public/js/index.js"></script>
}
