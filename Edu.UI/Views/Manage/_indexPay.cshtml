@model  Edu.UI.Models.CardViewModel


<div class="row">
    <div class="col-sm-12 col-md-offset-2 col-md-8">
        @using (Ajax.BeginForm("CardActive", new AjaxOptions() { HttpMethod = "post",OnSuccess = "activeCb" ,OnBegin = "bfAct"}))
        {
            @Html.AntiForgeryToken()
            <h3>激活卡</h3>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-md-2 control-label">卡号</label>
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.CardId, new { @class = "form-control", autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">
                <label class="col-md-2 control-label">密码</label>   <div class="col-md-10">
                    @Html.PasswordFor(m => m.Pwd, new { @class = "form-control", autocomplete = "off" })
                </div>
            </div>
            <div class="form-group">  
                <div class="row">
                    <div class="col-md-2 ">
                    </div>
                    <div class="col-md-10">
                        <input type="submit" class="btn btn-warning btn-block" value="激活"/>
                    </div>
                </div>
             </div>
        }
    </div>
    <div class="col-md-2 hidden-xs"></div>
</div>
 