@model Edu.UI.Models.UserMsg

@using (
    Ajax.BeginForm("contact", "Default",
    FormMethod.Post,
    new AjaxOptions
    {
       OnSuccess="msgSnd(data)"
    })
    )
{

<div class="form-horizontal">
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">

        <div class="col-md-10">
            @Html.EditorFor(model => model.UserMessage.FromUid, new { htmlAttributes = new { @class = "form-control", placeholder = "请留下您的姓名" } })
            @Html.ValidationMessageFor(model => model.UserMessage.FromUid, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10">
            @Html.EditorFor(model => model.ToUserId, new { htmlAttributes = new { @class = "form-control", placeholder = "请留下您的联系方式(手机号码或电子邮箱)" } })
            @Html.ValidationMessageFor(model => model.ToUserId, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-10 ed">
            @Html.TextAreaFor(model => model.UserMessage.MsgContent, new { @class = "form-control", @rows = 9, @style = "width:100%;resize:none;", @placeholder = "请写下您的意见或建议" })

            @Html.ValidationMessageFor(model => model.UserMessage.MsgContent, "", new { @class = "text-danger" })
             <a href="javascript:;" class="btn btn-primary btn-lg">确定</a>
        </div>

    </div>
   
    <p class="tips text-danger"></p>


</div>

}